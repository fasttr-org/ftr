#!/bin/sh

set -e

# install depes

if [ "$USER" != "root" ]; then
	SUDO="sudo"
fi

if [ "`which tsc`" = "" ]; then
	$SUDO npm install typescript -g;
fi

if   [ ! -d libs/nxkit ] \
	|| [ ! -d libs/nxp/gyp ] \
	|| [ ! -d depe/v8-link ] \
	|| [ ! -d depe/FFmpeg ] \
	|| [ ! -d depe/node ] \
	|| [ ! -d depe/bplus ] \
; then
	make pull
fi

# build libs/ngui
if [ ! -f libs/ngui/out/ngui/package.json ]; then
	cd libs/ngui
	npm i
	npm run build
	cd ../..
fi

# build libs/nxkit
if [ ! -f libs/nxkit/out/nxkit/package.json ]; then
	cd libs/nxkit
	npm i
	npm run build
	cd ../..
fi

# build libs/nxp
if [ ! -f libs/nxp/out/nxp/package.json ]; then
	cd libs/nxp
	npm i
	rm -rf node_modules/nxkit
	cd node_modules
	ln -s ../../nxkit/out/nxkit
	cd ..
	npm run build
	cd ../..
fi

if   [ ! -d tools/node_modules/nxkit ] \
	|| [ ! -d tools/node_modules/nxp ] \
; then
	rm -rf tools/node_modules/*
	mkdir -p tools/node_modules
	cd tools/node_modules
	ln -s ../../libs/nxkit/out/nxkit
	ln -s ../../libs/nxp/out/nxp
	cd ../..
fi

if [ ! -d node_modules ]; then
	mkdir node_modules
	cd node_modules
	ln -s ../libs/ngui/out/ngui
	ln -s ../libs/nxkit/out/nxkit
	ln -s ../libs/nxp/out/nxp
	cd ..
fi

node tools/configure.js "$@"